    "tape": "5.2.2",
    "tape-async": "2.3.0",
    "tmp": "0.2.1"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "instrument": false
  },
  "scripts": {
    "build": "grunt",
    "prepublish": "npm run build && npm run test",
